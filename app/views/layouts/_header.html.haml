.headerWrap
  .header
    = render 'layouts/mailchimp'
    %h1= link_to image_tag('logo.png', :alt => "The Bird Suit"), root_path

    %nav
      %ul.nav
        %li= link_to "Home", root_path
        %li= link_to "Story", story_path
        %li{:id => "artist-link"}
          = link_to "Artists", artists_path
          %ul.sub-nav
            - if @artists
              - @artists.each do |artist| 
                %li=link_to artist.name, artist_path(artist)
            - else
              - Artist.all.each do |artist| 
                %li=link_to artist.name, artist_path(artist)
        %li= link_to "Blog", blog_path
        %li= link_to "Contact", contact_path
        = link_to image_tag('link_fb.gif', :alt => "Find The Bird Suit on Facebook", 'data-hover' => './images/link_fb_hover.gif'), "http://www.facebook.com/TheBirdSuit"
        = link_to image_tag('link_twitter.gif', :alt => "Find The Bird Suit on Twitter", 'data-hover' => './images/link_twitter_hover.gif') , "http://twitter.com/TheBirdSuit"
    %br{:style => "clear:both"}